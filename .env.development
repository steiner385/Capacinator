# Development Environment Configuration
NODE_ENV=development
PORT=3110
VITE_PORT=3120
VITE_API_URL=/api

# Database Configuration
DB_FILENAME=capacinator-dev.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=daily
DB_BACKUP_RETENTION_DAYS=30

# Authentication
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# File Upload
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads

# Application Settings
AUTO_SAVE_INTERVAL=30000  # 30 seconds
ENABLE_AUTO_UPDATE=true
LOG_LEVEL=debug

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_MAX_HISTORY_ENTRIES=1000
AUDIT_RETENTION_DAYS=365
AUDIT_SENSITIVE_FIELDS=password,token,secret,key,hash
AUDIT_ENABLED_TABLES=people,projects,roles,assignments,availability,project_phases_timeline,scenarios,scenario_project_assignments,scenario_merge_conflicts

# Git Sync Feature Flag
ENABLE_GIT_SYNC=false

# GitHub Enterprise Configuration
GITHUB_ENTERPRISE_URL=https://github.enterprise.com
GIT_REPOSITORY_URL=

# Git Sync Settings
GIT_SYNC_AUTO_PULL_ON_STARTUP=true
GIT_SYNC_SHALLOW_CLONE=true
GIT_SYNC_CONFLICT_AUTO_MERGE=true