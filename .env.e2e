# E2E Test Environment Configuration
NODE_ENV=e2e
DATABASE_URL=sqlite:./data/capacinator-e2e.db
DB_FILENAME=capacinator-e2e.db
PORT=3110
CLIENT_PORT=3120

# Disable features that might interfere with tests
DISABLE_AUTH=false
DISABLE_NOTIFICATIONS=true

# Enable audit service for E2E tests
AUDIT_ENABLED=true
AUDIT_MAX_HISTORY_ENTRIES=1000
AUDIT_RETENTION_DAYS=365
AUDIT_ENABLED_TABLES=people,projects,roles,assignments,availability,project_assignments,scenario_project_assignments,project_phases_timeline,scenarios,scenario_merge_conflicts
AUDIT_SENSITIVE_FIELDS=password,token,secret,key,hash