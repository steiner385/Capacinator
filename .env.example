# Application Configuration
NODE_ENV=development
PORT=3456  # Internal port for embedded server

# Database Configuration
DB_FILENAME=capacinator.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=daily
DB_BACKUP_RETENTION_DAYS=30

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# File Upload
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR=uploads

# Application Settings
AUTO_SAVE_INTERVAL=30000  # 30 seconds
ENABLE_AUTO_UPDATE=true

# Enhanced Logging Configuration
LOG_LEVEL=info                        # error|warn|info|http|debug
LOG_FORMAT=human                      # human|json (auto-detects in dev)
LOG_DIRECTORY=/tmp/capacinator-logs   # Directory for log files
LOG_MAX_FILE_SIZE=10485760           # 10MB max file size
LOG_MAX_FILES=10                     # Keep last 10 log files
SERVICE_NAME=capacinator             # Service identifier for logs
ENABLE_TEST_LOGS=false               # Enable logging in tests

# Client Logging
ENABLE_CLIENT_REMOTE_LOGGING=true    # Enable remote client logging
CLIENT_LOG_ENDPOINT=/api/client-logs # Endpoint for client logs

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_MAX_HISTORY_ENTRIES=1000  # Max audit entries per record
AUDIT_RETENTION_DAYS=365  # How long to keep audit logs
AUDIT_SENSITIVE_FIELDS=password,token,secret,key,hash  # Fields to redact in audit logs
AUDIT_ENABLED_TABLES=people,projects,roles,assignments,availability  # Tables to audit

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_oauth_app_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/oauth/callback
ENCRYPTION_KEY=RGkVFUIJtMsC9KeUlK8/o+EfzijssYEWydv7A0j8Eqs=

