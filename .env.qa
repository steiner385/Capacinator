# QA Environment Configuration
NODE_ENV=qa
PORT=3141
VITE_PORT=3140

# Database Configuration
DB_FILENAME=capacinator-qa.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=daily
DB_BACKUP_RETENTION_DAYS=7

# Authentication
JWT_SECRET=qa-jwt-secret-change-for-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# File Upload
MAX_FILE_SIZE=52428800  # 50MB
UPLOAD_DIR=uploads-qa

# Application Settings
AUTO_SAVE_INTERVAL=15000  # 15 seconds
ENABLE_AUTO_UPDATE=true
LOG_LEVEL=info

# Audit Configuration
AUDIT_ENABLED=true
AUDIT_MAX_HISTORY_ENTRIES=500
AUDIT_RETENTION_DAYS=90
AUDIT_SENSITIVE_FIELDS=password,token,secret,key,hash
AUDIT_ENABLED_TABLES=people,projects,roles,assignments,availability