# E2E Testing Environment Configuration
NODE_ENV=test
PORT=3131
VITE_PORT=3130

# Database Configuration
DB_FILENAME=capacinator-test.db
DB_BACKUP_ENABLED=false
DB_BACKUP_INTERVAL=never
DB_BACKUP_RETENTION_DAYS=1

# Authentication
JWT_SECRET=test-jwt-secret-for-e2e-testing
JWT_EXPIRES_IN=1h
BCRYPT_ROUNDS=4  # Lower for faster tests

# Encryption (for GitHub tokens, etc.)
ENCRYPTION_KEY=IwNwIe9IIR+3HKINAJNGLG10dw1gvaGAS1liA7SaXjA=

# GitHub OAuth (test values - not real credentials)
GITHUB_CLIENT_ID=test-client-id
GITHUB_CLIENT_SECRET=test-client-secret
GITHUB_CALLBACK_URL=http://localhost:3131/api/auth/github/callback

# File Upload
MAX_FILE_SIZE=10485760  # 10MB for testing
UPLOAD_DIR=uploads-test

# Application Settings
AUTO_SAVE_INTERVAL=5000  # 5 seconds for faster testing
ENABLE_AUTO_UPDATE=false
LOG_LEVEL=warn

# Audit Configuration
AUDIT_ENABLED=true  # Enabled for audit testing
AUDIT_MAX_HISTORY_ENTRIES=100
AUDIT_RETENTION_DAYS=1
AUDIT_SENSITIVE_FIELDS=password,token,secret,key,hash
AUDIT_ENABLED_TABLES=people,projects,roles,assignments,availability,project_phases_timeline,scenarios,scenario_project_assignments,scenario_merge_conflicts