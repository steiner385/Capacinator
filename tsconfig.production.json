{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "noImplicitAny": false,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@server/*": ["src/server/*"],
      "@shared/*": ["shared/*"],
      "@shared/types": ["shared/types/index.ts"],
      "@shared/types/*": ["shared/types/*"]
    }
  },
  "include": ["src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "client", "**/*.test.ts", "**/*.spec.ts", "**/__tests__/**", "**/tests/**", "src/scripts/**", "scripts/**", "**/*.e2e.*", "src/server/database/knexfile.e2e.ts", "src/server/database/init-e2e.ts"]
}